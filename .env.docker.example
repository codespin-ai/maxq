# MaxQ Docker Environment Configuration
# Copy to .env.docker and update with your values
#
# Used by: devenv/docker-compose.yml

# =============================================================================
# Database Configuration
# =============================================================================
# Data directory inside container - host path mapped via MAXQ_DATA_HOST_DIR
MAXQ_DATA_DIR=/app/data

# Host directory to mount as /app/data in container
MAXQ_DATA_HOST_DIR=./data

# =============================================================================
# Server Configuration
# =============================================================================
MAXQ_SERVER_HOST=0.0.0.0
MAXQ_SERVER_PORT=5003
MAXQ_FLOWS_ROOT=/app/flows
LOG_LEVEL=info

# =============================================================================
# Flows Host Directory
# =============================================================================
# Host directory to mount as /app/flows in container
MAXQ_FLOWS_HOST_DIR=./flows

# =============================================================================
# Scheduler Configuration (optional)
# =============================================================================
# MAXQ_SCHEDULER_INTERVAL_MS=200
# MAXQ_SCHEDULER_BATCH_SIZE=10
# MAXQ_MAX_CONCURRENT_STEPS=10
