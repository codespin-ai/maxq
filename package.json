{
  "name": "@codespin/maxq",
  "version": "0.0.2",
  "description": "DAG-based workflow orchestration engine with filesystem flow discovery",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "./scripts/build.sh",
    "clean": "./scripts/clean.sh",
    "start": "./scripts/start.sh",
    "test": "cd node/packages/maxq-integration-tests && npm test",
    "migrate:all": "./scripts/db-all.sh migrate:latest",
    "migrate:all:rollback": "./scripts/db-all.sh migrate:rollback",
    "migrate:all:status": "./scripts/db-all.sh migrate:status",
    "seed:all": "./scripts/db-all.sh seed:run",
    "migrate:maxq:make": "knex migrate:make --knexfile database/maxq/knexfile.js",
    "migrate:maxq:latest": "knex migrate:latest --knexfile database/maxq/knexfile.js",
    "migrate:maxq:rollback": "knex migrate:rollback --knexfile database/maxq/knexfile.js",
    "migrate:maxq:status": "knex migrate:status --knexfile database/maxq/knexfile.js",
    "seed:maxq:make": "knex seed:make --knexfile database/maxq/knexfile.js",
    "seed:maxq:run": "knex seed:run --knexfile database/maxq/knexfile.js",
    "db:dump-schema": "./scripts/dump-db-schema.sh",
    "test:grep": "cd node/packages/maxq-integration-tests && npm run test:grep"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^5.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "knex": "^3.1.0",
    "lint-staged": "^16.1.5",
    "mocha": "^11.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "pg": "^8.13.1",
    "better-sqlite3": "^11.8.0"
  }
}
